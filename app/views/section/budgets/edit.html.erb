<main>
  <div class = "container-fluid">
    <div class = "row">
      <div class = "col-2">
        予算編集
      </div>
    </div>
    <%= form_with model: @budget, url: "/budgets/#{@budget.id}", method: :patch do |f| %>
      <div class = "row" style = "margin-top: 40px">
        <div class = "col-2">
          <label for = "name">予算名</label>
        </div>
        <div class = "col-5">
          <%= f.text_field :name , class: "form-control" %>
        </div>
        <div class = "col-2">
          <%= f.submit "変更を登録する", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</main>
<main>
  <div class = "container-fluid">
    <div class = "row">
      <div class = "col-4">
        <div class = "row">
          <div class = "col-12">
            差出郵便履歴一覧
          </div>
        </div>
      </div>
    </div>
    <div class = "row">
      <div class = "col-12">
        <table class = "table table-bordered">
          <thead>
            <tr>
              <th>年月日</th>
              <th>合計通数</th>
              <th>合計金額</th>
              <th>支払予算</th>
              <th>状態</th>
              <th>詳細</th>
              <th>削除</th>
            </tr>
          </thead>
          <tbody>
            <% @send_letters.each do |send_letter| %>
              <tr>
                <td><%= send_letter.created_at.strftime('%Y/%m/%d') %></td>
                <td></td>
                <td></td>
                <td><%= send_letter.payment_budget.budget.name %></td>
                <td>
                  <% if send_letter.status = "false" %>
                    未確定
                  <% else %>
                    確定
                  <% end %>
                </td>
                <td><%= link_to "詳細を表示する", "/send_letters/#{send_letter.id}" %></td>
                <td>
                  <% if send_letter.status = "false"%><!--作成日が当日のものの条件を追加すること！-->
                    <%= link_to "削除", "/send_letters/#{send_letter.id}", method: :delete, class: "btn btn-danger" %>
                  <% else %>
                    削除不可(削除する場合は管理者に連絡してください。)
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
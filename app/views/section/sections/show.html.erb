<main>
  <div class="text-center">
    <br><h3><%= @section.name %>の部署情報</h3><br>
    <div class="row justify-content-center">
      <div class="col-2">
        <table class="table table-bordered border-dark">
          <tr>
            <th class="border-dark">担当者</th>
            <td class="border-dark"><%= @section.pic_name %></td>
          </tr>
          <tr>
            <th class="border-dark">電話番号</th>
            <td class="border-dark"><%= @section.telephone_number %></td>
          </tr>
          <tr>
            <th class="border-dark">メールアドレス</th>
            <td class="border-dark"><%= @section.email %></td>
          </tr>
        </table>
        <br>
        <%= link_to "部署情報を編集する", section_information_path, class: "btn btn-success form-control" %>
      </div>
    </div>
  </div>
</main>
<main>
  <div class = "container">
    <div class = "row">
      <div class = "col-2">
        部署情報編集ページ
      </div>
    </div>
    <%= form_with model: @section, url: sections_information_path, method: :patch do |f| %>
      <div class = "row">
        <div class = "col-2">
          <label for = "name">部署名</label>
        </div>
        <div class = "col-2">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>
      <div class = "row">
        <div class = "col-2">
          <label for = "pic_name">担当者名</label>
        </div>
        <div class = "col-2">
          <%= f.text_field :pic_name, class: "form-control" %>
        </div>
      </div>
      <div class = "row">
        <div class = "col-2">
          <label for = "telephone_number">電話番号</label>
        </div>
        <div class = "col-2">
          <%= f.text_field :telephone_number, class: "form-control" %>
        </div>
      </div>
      <div class = "row">
        <div class = "col-2">
          <label for = "email">メールアドレス</label>
        </div>
        <div class = "col-2">
          <%= f.email_field :email, class: "form-control" %>
        </div>
      </div>
      <div class = "row">
        <div class = "col-4">
          <%= f.submit "変更を登録する", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</main>